<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#9998b1"
    android:orientation="vertical"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/imageRegisterLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dip"
        android:contentDescription="@string/logo"
        android:src="@drawable/candado_land" />

    <LinearLayout
        android:id="@+id/relRegisterUser"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1.0" >

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dip"
            android:layout_weight="0.3"
            android:text="@string/user"
            android:textColor="#000000"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtRegisterUser"
            android:layout_height="wrap_content"
            android:layout_width="0dip"
            android:layout_weight="0.7"
            android:inputType="textNoSuggestions" />
    </LinearLayout>

     <LinearLayout
        android:id="@+id/relRegisterPass1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1.0" >
        
	    <TextView
	        android:layout_height="wrap_content"
	        android:layout_width="0dip"
	        android:layout_weight="0.3"
	        android:text="@string/password"
	        android:textColor="#000000"
	        android:textStyle="bold" />
	
	    <EditText
	        android:id="@+id/txtRegisterPassword1"
	        android:layout_height="wrap_content"
	        android:layout_width="0dip"
	        android:layout_weight="0.7"
	        android:inputType="textPassword" />
	</LinearLayout>
    
    <LinearLayout
        android:id="@+id/relRegisterPass2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1.0" >
	    
	    <TextView
	        android:layout_height="wrap_content"
	        android:layout_width="0dip"
	        android:layout_weight="0.3"
	        android:text="@string/password_repeit"
	        android:textColor="#000000"
	        android:textStyle="bold" />
	
	    <EditText
	        android:id="@+id/txtRegisterPassword2"
	        android:layout_height="wrap_content"
	        android:layout_width="0dip"
	        android:layout_weight="0.7"
	        android:inputType="textPassword" />
	 </LinearLayout>   

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="8dip" >

        <Button
            android:id="@+id/buttonRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:background="@drawable/login_button_bg"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="10dp"
            android:text="@string/accept"
            android:textColor="@drawable/login_button_color"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonBackToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:background="@drawable/login_button_bg"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="10dp"
            android:text="@string/backToLogin"
            android:textColor="@drawable/login_button_color"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>